{
    "name": "Custom CBC reports",
    "readme_file": "README.md",
    "version": "0.1.0",
    "language": "python",
    "reports": [
        {
            "name": "Line level asset report",
            "readme_file": "reports/line_level_asset_report/README.md",
            "entrypoint": "reports.line_level_asset_report.entrypoint.generate",
            "audience": [
                "provider",
                "vendor"
            ],
            "report_spec": "2",
            "parameters": [
                {
                  "id": "product",
                  "type": "product",
                  "name": "Product List",
                  "description": "Select the products you want to include in report",
                  "required": true
                },
                {
                  "id": "date",
                  "type": "date_range",
                  "name": "Report period",
                  "description": "Provide the time period to create the report",
                  "required": true
                },
                {
                  "id": "status",
                  "type": "choice",
                  "name": "Asset status",
                  "description": "Select the status of the asset you want to include in report",
                  "required": true,
                  "choices": [
                    {
                      "value": "all",
                      "label": "All"
                    },
                    {
                      "value": "draft",
                      "label": "Draft"
                    },
                    {
                      "value": "processing",
                      "label": "Processing"
                    },
                    {
                      "value": "suspended",
                      "label": "Suspended"
                    },
                    {
                      "value": "active",
                      "label": "Active"
                    },
                    {
                      "value": "terminating",
                      "label": "Terminating"
                    },
                    {
                      "value": "terminated",
                      "label": "Terminated"
                    }
                  ]
                },
                {
                  "id": "commitment_status",
                  "type": "choice",
                  "name": "three years commit",
                  "required": true,
                  "description": "Show orders with three commitment",
                  "choices": [
                    {
                      "value": "all assets",
                      "label": "all assets"
                    },
                    {
                      "value": "3yc",
                      "label": "with three years commit"
                    }
                  ]
                }
              ],
            "renderers": [
                {
                    "id": "xlsx",
                    "type": "xlsx",
                    "default": true,
                    "description": "Export data in Microsoft Excel 2020 format.",
                    "template": "reports/line_level_asset_report/templates/xlsx/template.xlsx",
                    "args": {
                        "start_row": 2,
                        "start_col": 1
                    }
                }
            ]
        },
      {"name": "Subscriptions report",
      "readme_file": "reports/subscriptions_report/README.md",
      "entrypoint": "reports.subscriptions_report.entrypoint.generate",
      "audience": [
        "provider",
        "vendor"
      ],
      "report_spec": "2",
      "parameters": [
        {
          "id": "product",
          "type": "product",
          "name": "Product List",
          "description": "Select the products you want to include in report",
          "required": true
        },
        {
          "id": "date",
          "type": "date_range",
          "name": "Report period",
          "description": "Provide the time period to create the report",
          "required": true
        },
        {
          "id": "status",
          "type": "checkbox",
          "name": "Subscription status",
          "description": "Select the status subscriptions you want to include in report",
          "required": true,
          "choices": [
            {
              "value": "draft",
              "label": "Draft"
            },
            {
              "value": "processing",
              "label": "Processing"
            },
            {
              "value": "suspended",
              "label": "Suspended"
            },
            {
              "value": "active",
              "label": "Active"
            },
            {
              "value": "terminating",
              "label": "Terminating"
            },
            {
              "value": "terminated",
              "label": "Terminated"
            }
          ]
        },
        {
          "id": "commitment_status",
          "type": "choice",
          "name": "three years commit",
          "required": true,
          "description": "Show orders with three commitment",
          "choices": [
            {
              "value": "all assets",
              "label": "all assets"
            },
            {
              "value": "3yc",
              "label": "with three years commit"
            }
          ]
        },
        {
          "id": "connection_type",
          "type": "checkbox",
          "name": "Type of Environment",
          "required": true,
          "description": "Select the type of environment you want to include in report",
          "choices": [
            {
              "value": "production",
              "label": "Production"
            },
            {
              "value": "test",
              "label": "Test"
            },
            {
              "value": "preview",
              "label": "Preview"
            }
          ]
        }
      ],
      "renderers": [
        {
          "id": "xlsx",
          "type": "xlsx",
          "default": true,
          "description": "Export data in Microsoft Excel 2020 format.",
          "template": "reports/subscriptions_report/templates/xlsx/template.xlsx",
          "args": {
            "start_row": 2,
            "start_col": 1
          }
        }
      ]}
    ]
}
